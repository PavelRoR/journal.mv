@media screen and (min-width 2299px)
	body
		font-size: 20px
	.container
		width 1400px
	.sub_cols
		margin-top: -126px
@media screen and (max-width 1199px)
	.contact
		font-size: 14px
		line-height: 14px
		padding-left: 20px;
	.contact_email
		padding-left: 23px
	.sub_cols
		position static
	.mag
		margin-bottom: -50px
	.button_fresh
		line-height: .9
@media screen and (max-width 991px)
	#main
		padding-bottom: 40px
	#logo
		display block
		float: none
		margin 0 auto
	.contacts
		float: none
		text-align: center
	.contact
		margin 5px
	.main_title
		font-size: 43px
	.main_subtitle
		margin-bottom: 20px
	.main_text
	.general_title_archive
	.general_title_fresh
		margin-top: 30px
	.main_text
		margin-bottom: 30px
@media screen and (max-width 767px)
	.main_title 
		text-align: center
		span
			display: inline-block
	.main_subtitle
	.general_title
	footer
	.fresh_form_title
		text-align: center
	.main_text
		text-align: center
		margin: 20px 0
	.mag
		margin-bottom: -100px
	.main_list
		width 100%
		max-width 320px
		margin 0 auto 20px
	.button
		margin 0 auto
	.general_title_authors
		margin-top: 50px
	.main_ol_list
		padding-left: 20px
	.fresh_mail
		margin 10px auto
@media screen and (max-width 650px)
	.mag
		margin-bottom: -50px
@media screen and (max-width 485px)
	header
		margin-bottom: 0
	#logo
		width 100px
	.main_title
		font-size: 32px
	.general_title
		font-size: 24px
		margin-bottom: 20px
	.reqs
		font-size: 12px
	.soc_button
		margin-top: 10px
	.email
	.button_mail
		float none
		width 100%
		max-width 280px
		display block
		margin 0 auto
	.button_mail
		margin-top: 10px
	.modal_mail_section_title
		font-size: 22px
		margin: 30px 0 15px
		width 100%
	.fresh_mail
		margin-top: 10px
	.general_title_authors
		margin-top: 30px
@media screen and (max-width 380px)
	#main
		padding-bottom: 30px
	.main_title
		font-size: 26px
		margin 10px 0 15px
		line-height: 1.3
	.main_subtitle
		font-size: 21px
		margin-bottom: 10px
	.main_text
		margin 0 0 10px
	.mag
		margin-bottom: -40px
	.general_title_archive, .general_title_fresh, .main_text
		margin-top: 20px